@model CreateCommentDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Ekle</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <label>Ad Soyad</label>
                        <input type="text" class="form-control" asp-for="UserNameSurname" />
                        <br />
                        <label>Yorum</label>
                        <textarea type="text" rows="3" class="form-control" asp-for="CommentDetail"></textarea>
                        <br />
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />
                        <label>Resim</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <label>Puan</label>
                        <input type="number" class="form-control" asp-for="Rating" />
                        <br />
                        <label>Durum</label>
                        <input type="text" class="form-control" asp-for="Status" />
                        <br />
                        <button class="btn btn-success">Ekle</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>
