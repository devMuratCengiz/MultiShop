@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Markalar</h4>

                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka Adı</th>
                                <th>Marka Resim</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.BrandName</td>
                                    <td><img src="@item.ImageUrl" style="width:75px;height:75px" /></td>
                                    @* <td><a href="#" class="btn btn-info">Ürünler</a></td> *@
                                    <td><a asp-area="Admin" asp-action="Update" asp-controller="Brand" asp-route-id="@item.BrandId" class="btn btn-warning">Güncelle</a></td>
                                    <td><a asp-area="Admin" asp-action="Delete" asp-controller="Brand" asp-route-id="@item.BrandId" class="btn btn-danger">Sil</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <td><a asp-area="Admin" asp-action="Create" asp-controller="Brand" class="btn btn-success">Ekle</a></td>
                </div>
            </div>
        </div>
    </div>
</section>