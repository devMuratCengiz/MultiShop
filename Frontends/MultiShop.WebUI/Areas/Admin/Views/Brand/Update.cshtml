@model UpdateBrandDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Marka Ekle</h4>
                
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="BrandId" />
                        <label>Marka Adı</label>
                        <input type="text" class="form-control" asp-for="BrandName" />
                        <br />
                        <label>Marka Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-success">Güncelle</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>